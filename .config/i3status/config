        interval = 5
}

order += "volume master"
order += "cpu_usage"
order += "memory"
order += "disk /"
order += "battery 0"
order += "ethernet enp6s0"
order += "wireless wlan0"
order += "tztime local"

disk "/" {
        format = "ïƒ‡ %avail"
}

volume master {
        format = "ï€¨  %volume"
}

cpu_usage {
        format = "ï’¼  %usage"
}

memory {
        format = "î¿…  %percentage_used"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%m-%d-%y %I:%M %p"
}

wireless wlan0 {
        format_up = "W: (%quality at %essid, %bitrate)"
        format_down = "W: down"
}

ethernet enp6s0 {
        format_up = "E: (%speed)"
        format_down = "E: down"
}

